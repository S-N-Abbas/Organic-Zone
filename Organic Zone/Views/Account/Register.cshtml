@model Organic_Zone.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="contact-top-agileinfo">
    <div class="container">
        <h3 class="title-w3layouts contact-head">Create account to access more features</h3>
    </div>
</div>


<div class="jarallax contact-bottom contact-right-w3l" id="contact">
    <div class="col-md-7">
        <h3 class="title-w3layouts white-agileits">Create your account</h3>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })

            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "Email"})


            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })

            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })

    <input type="submit" value="Register" />
        }
    </div>
    <div class="clearfix"></div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
